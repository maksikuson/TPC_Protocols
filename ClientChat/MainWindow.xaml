<Window x:Class="ClientChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Label Margin="5">Message : </Label>
            <Button DockPanel.Dock="Right" Padding="10,5" Margin="5" Click="Leave_Button_Click">Leave</Button>
            <Button DockPanel.Dock="Right" Padding="10,5" Margin="5" Click="Join_Button_Click">Join</Button>
            <Button DockPanel.Dock="Right" Padding="10,5" Margin="5" Click="Send_Button_Click">Send</Button>
            <TextBox Margin="5" VerticalContentAlignment="Center" Name="msgTextBox"></TextBox>
        </DockPanel>
        <TextBlock DockPanel.Dock="Top" TextAlignment="Center" FontSize="20" FontWeight="Bold">Chat</TextBlock>
        <ListBox ItemsSource="{Binding}"></ListBox>
    </DockPanel>
</Window>
